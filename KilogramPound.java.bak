import java.util.Scanner;
class KilogramPound

{
	public static void main(String[] args) 
	{
		System.out.print("ENTER POUND: ");
		Scanner sc = new Scanner(System.in);
		double p = sc.nextDouble();
		double k = p*0.454;
		
		System.out.print(p+"POUNDS ");
		System.out.print("is");
		System.out.print(k+"KILOGRAMS");
		
		
	}
}
 